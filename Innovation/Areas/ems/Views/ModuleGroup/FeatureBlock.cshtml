@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using EMS.Areas.ems.Helper
@model Sitecore.Mvc.Presentation.RenderingModel
@{ 
    var ImagePos = SitecoreAccess.getDroplinkSelectedItem(Model.Item, "ImagePosition") != null ?
        SitecoreAccess.getDroplinkSelectedItem(Model.Item, "ImagePosition").Fields["Value"].Value.Equals("left") : false;

}
@if (Model != null)
{
    <div class="row featurette">
        @if (ImagePos)
        {
            <div class="col-md-5">
                @Html.Sitecore().Field("Image", new {@class="feature-img" })

            </div>
        }
        <div class="col-md-7">
            <h2 class="featurette-heading">@Html.Sitecore().Field("Title")<span class="text-muted">@Html.Sitecore().Field("ShortText")</span></h2>
            <p class="lead">@Html.Sitecore().Field("MainContent")</p>
            @if (SitecoreAccess.HasValue(Model.Item, "CTALink"))
            {
                <p>
                    @Html.Sitecore().Field("CTALink", new { @class = "btn btn-lg btn-primary", @role = "button" })
                </p>
            }
        </div>
        @if (!ImagePos)
        {
            <div class="col-md-5">
                @Html.Sitecore().Field("Image")
            </div>
        }
    </div>

    <hr class="featurette-divider">

}
else if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    <span style="width:100%;border:1px solid;"> Select Data Source</span>
}