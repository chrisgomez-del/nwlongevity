@model NM_MultiSites.Areas.Innovation.Models.Components.TextBlock
@{
    bool isEditMode = Sitecore.Context.PageMode.IsExperienceEditor;
    Random random = new Random();
    string idHash = Model.SourceItem != null ? Model.SourceItem.ID.GetHashCode().ToString(): Sitecore.Context.Item.GetHashCode().ToString();
    string randomString = random.Next(1, 50).ToString();
    bool isModalNull = (Model == null || Model.SourceItem == null) ? true : false;
    string titlehash = isModalNull? "acc-heading" : "acc-" + idHash + randomString + "-heading";
    string contenthash = isModalNull ? "acc-content" : "acc-" + idHash + randomString + "-content";
}
@if (!isEditMode)
{
<div class="accordion-item">
    <div class="accordion-header" id="@titlehash">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=@("#" + contenthash) aria-expanded="true" aria-controls="@contenthash">
            <span class="accordion-title">@Model.Title</span>
        </button>
    </div>
    <div id="@contenthash" class="accordion-collapse collapse" aria-labelledby="@titlehash">
        <div class="accordion-body">
            @Model.Body
        </div>
    </div>
</div>
}
else
{
<div class="accordion-item">
    <div class="accordion-header">
        <span class="accordion-title">@Model.Title</span>
    </div>
    <div class="accordion-collapse collapse show">
        <div class="accordion-body">
            @Model.Body
        </div>
    </div>
</div>
}

