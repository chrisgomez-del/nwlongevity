@model NM_MultiSites.Areas.westhealth.Models.Components.CardViewModel

<div class="col-md-6">
    <div class="card h-100 rounded-3 ps-1 pe-1 pt-3 pb-3 p-md-3">
        <a href="#">
            <img src="@Model.ImageUrl?mw=670&mh=701&mode=crop" alt="@Model.ImageAltText" class="card-img rounded-2" />
        </a>
        <div class="card-body d-flex flex-column">
            <h3 class="card-title mb-4">@Model.Title</h3>
            <p class="card-text flex-grow-1">@Model.Copy</p>
            @if (Sitecore.Context.PageMode.IsExperienceEditor)
            {
                @Html.Sitecore().Field(NM_MultiSites.Areas.westhealth.Templates.Card.Fields.CtaSource, new { @class = "btn btn-link align-self-start d-flex align-items-center p-0" })
            }
            else
            {
                <a href="@Model.CtaSource" aria-label="@Model.CtaText" class="btn btn-link align-self-start d-flex align-items-center p-0"><span>@Model.CtaText </span><i class="bi bi-arrow-right-short link--arrow"></i></a>
            }
        </div>
    </div>
</div>
