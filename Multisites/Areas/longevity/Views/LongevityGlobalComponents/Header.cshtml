                <path d="M14.7773 10V13.0214" stroke="#4E2A84" stroke-width="1.14606" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M11 16.043H27.6179" stroke="#4E2A84" stroke-width="1.14606" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M16.1562 21.655L18.7349 24.1416L23.8922 19.1685" stroke="#4E2A84" stroke-width="1.14685" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </div>
        <div id="mobileMenu" class="mobile-menu" aria-hidden="true">
            <div class="logo-container">
                <div class="close-icon" id="closeIcon" aria-label="Close menu">
                    <svg id="closeIconSVG" width="13" height="12" viewBox="0 0 13 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M13 12H11.6092L6.50589 6.36936L1.33182 12H0L5.79873 5.76197L0.518586 0H1.89755L6.55304 5.16279L11.2439 0H12.5757L7.2602 5.75376L13 12Z" fill="white" />
                    </svg>
                </div>
                <div class="logo">
                    <a href="/"><img src="/Areas/longevity/Content/img/header/logo.svg" alt="Northwestern Medicine Longevity Clinic logo"></a>
                </div>
            </div>
            @foreach (var link in Model.MainNavLinks)
            {
                <a href="@link.CTALink" class="@link.Class">@link.Title</a>
            }
        </div>
    </nav>
}

