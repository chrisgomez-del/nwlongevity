                <path d="M7.07812 2H32.4679" stroke="white" stroke-width="3" stroke-linecap="round" />
                <path d="M2 10H32.4678" stroke="white" stroke-width="3" stroke-linecap="round" />
                <path d="M7.07812 18H32.4679" stroke="white" stroke-width="3" stroke-linecap="round" />
            </svg>
        </div>
        <div class="logo"><a href="/"><img src="/Areas/longevity/Content/img/header/logo.svg" alt="Northwestern Medicine Longevity Clinic logo"></a></div>
        <div class="visit-icon plan-your-visit">
            <svg width="39" height="39" viewBox="0 0 39 39" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="39" height="39" rx="19.5" fill="white" />
                <path d="M11.7549 11.5469H26.8623C27.053 11.5469 27.2362 11.6221 27.3711 11.7568C27.5059 11.8917 27.5819 12.075 27.582 12.2656V16.0068H11.0361V12.2656C11.0363 12.075 11.1113 11.8917 11.2461 11.7568C11.3809 11.622 11.5642 11.547 11.7549 11.5469Z" fill="#5B3B8C" fill-opacity="0.2" stroke="#4E2A84" stroke-width="0.0716291" />
