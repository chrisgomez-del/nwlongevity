@using NM_MultiSites.Areas.Longevity.Helpers
@model NM_MultiSites.Areas.Longevity.Models.Global.Header


@if (Model.MainNavLinks != null && Model.MainNavLinks.Any())
{
    <nav id="nav" class="home desktop">
        <div class="logo"><a href="/"><img src="~/Areas/longevity/Content/img/header/logo.svg" alt="Northwestern Medicine Longevity Clinic logo"></a></div>
        <div class="menu">
            @foreach (var link in Model.MainNavLinks)
            {
                <a href="@link.CTALink" class="@link.Class">@link.Title</a>
            }
        </div>
    </nav>

    <nav id="navMobile" class="home mobile" aria-label="Main navigation">
        <div class="menu-icon" id="menuIcon" aria-label="Menu" aria-expanded="false" aria-controls="mobileMenu">
