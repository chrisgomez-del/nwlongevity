@using NM_MultiSites.Areas.ems.Models
@model EventCollection
@using Sitecore.Mvc.Extensions
@{
    Layout = null;
}

@if (Model != null && Model.Events != null)
{
    <section class="education section">
        <header class="h4 title-padding">
            @Model.Title
        </header>
        <ul class="list-unstyled">
            <li class="card">
                <div class="row no-gutters">
                    @foreach (var item in Model.Events)
                    {

                        <div class="col-md-12">
                            <div class="card-body">

                                <h4 class="card-title">@item.Title</h4>
                                @if (item.StartDate != null && !String.IsNullOrWhiteSpace(item.StartDate.ToString()))
                                {
                                    <p>Event Start: @item.StartDate.ToString().Replace("AM", "am").Replace("PM", "pm")</p>
                                }
                                @if (item.EndDate != null && !String.IsNullOrWhiteSpace(item.EndDate.ToString()))
                                {
                                    <p>Event End: @item.EndDate.ToString().Replace("AM", "am").Replace("PM", "pm")</p>
                                }

                                @if (@item.Image != null && @item.Image.Trim().Length > 0)
                                {
                                    <img src="@item.Image" class="card-img" alt="...">
                                }

                                <p class="card-text js-content-div">
                                    @item.MainContent
                                </p>

                                @if (item.CTALink != null && item.CTATitle != null)
                                {
                                    <p><a class="btn btn-lg btn-primary" href="@item.CTALink.ToString()" role="button">@item.CTATitle</a></p>
                                }

                            </div>
                        </div>
                        <img src="/images/horizgradientrule.jpg" style="width:100%;" height="3">
                    }

                </div>
            </li>

        </ul>
    </section>
}

