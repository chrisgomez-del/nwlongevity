@using System.Web.Mvc
@model EMS.Areas.ems.Models.User.NMPNUser

    <div class="container">
        <div class="row centered-form">
            <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add User</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <input type="text" name="Name" id="first_name" class="form-control input-sm" placeholder=" Name">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" name="UserName" id="usr_name" class="form-control input-sm" placeholder="User Name">
                            </div>
                            <div class="form-group">
                                <input type="email" name="Email" id="email" class="form-control input-sm" placeholder="Email Address">
                            </div>

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="Password" id="password" class="form-control input-sm" placeholder="Password">
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" name="NPIs" id="npis" class="form-control input-sm" placeholder="Enter comma saperated NPI Ids">
                            </div>

                            <div class="form-group">
                                <label for="IsAdmin">IsAdmin : </label>
                                @Html.CheckBoxFor(m=>m.IsAdmin , new { @name="IsAdmin", @class="form-control input-sm" })
                            </div>
                            <input type="submit" value="Register" class="btn btn-info btn-block">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>